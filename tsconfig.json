{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "ES5",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}